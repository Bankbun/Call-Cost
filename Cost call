    if(i==1)
    sub1Pro3();
    else if(i==2)
    sub2Pro3();
    else if(i!=1||i!=2){
    printf("\nERROR");
    printf("\n\nGo to home menu press 1\n");
    scanf("%d",&k);

    if(k==1){
    printf("\n\n\n\n\n");
    main();
    }
    getch();
    }
}

int sub1Pro3(){
    float e=0,f=0,s=0;
