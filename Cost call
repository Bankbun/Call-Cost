    if(e>1)f=(e-1)*.49+0.49;
    if(e>1)s=(e-1)*(((0.49*7)/100)+0.49)+0.49;

    printf("Your call cost is             : %0.2f Baht\n",f);
    printf("Your call cost include VAT is : %0.2f Baht\n\n",s);
    printf("Go to home menu press 1\n");
    scanf("%d",&k);

    if(k==1){
    printf("\n\n\n\n\n");
    main();
    }
    getch();
}

